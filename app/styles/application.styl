body
    font-family "Lucida Sans Unicode","Lucida Grande",sans-serif
    margin 0
    padding 0

a
    -webkit-tap-highlight-color rgba(0,0,0,0)

.tabs
    background #fff
    border-bottom 1px solid #c3c3c3
    display:-webkit-box;
    display:-moz-box;
    display:box;
    overflow:hidden;
    margin:0;
    padding:0;
    width:100%;

    li
        background-image:-moz-linear-gradient(top, #fff, #dcdcdc);
        background-image:-webkit-gradient(linear,left top,left bottom, color-stop(0,#fff), color-stop(1,#dcdcdc));
        -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#fff', EndColorStr='#dcdcdc)')";
        -webkit-box-flex:1;
        -moz-box-flex:1;
        box-flex:1;
        border-right:1px solid #c7c8c9;
        color:#989a90!important;
        display:block;
        font-weight:bold;
        line-height:10px;
        margin:0;
        padding: 0;
        text-decoration:none;
        text-shadow:0 1px 1px rgba(255,255,255,0.5);
        width: 100%;

        &:last-child
            border-right:none;

    a
        background-image:-moz-linear-gradient(top, #fff, #dcdcdc);
        background-image:-webkit-gradient(linear,left top,left bottom, color-stop(0,#fff), color-stop(1,#dcdcdc));
        -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#fff', EndColorStr='#dcdcdc)')";
        border-right:1px solid #c7c8c9;
        color:#989a90!important;
        display:block;
        font-weight:bold;
        line-height:20px;
        height:32px;
        margin: 0 auto;
        padding: 10px 0 0 0;
        text-align:center;
        text-decoration:none;
        text-shadow:0 1px 1px rgba(255,255,255,0.5);

        &.is-active
            background-image:-moz-linear-gradient(top, #7a7a7a, #505050);
            background-image:-webkit-gradient(linear,left top,left bottom, color-stop(0,#7a7a7a), color-stop(1,#505050));
            -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#7a7a7a', EndColorStr='#505050)')";
            background-color:#fff;
            box-shadow:inset 0 0 5px #333333;
            -moz-box-shadow:inset 0 0 5px #333333;
            -webkit-box-shadow:inset 0 0 5px #333333;
            color:#fff!important;
            text-shadow:0 1px 1px rgba(0,0,0,0.5);

        &:last-child
            border-right:none;

        &:active
            background:#e9e9e9;

.entry-list
    margin:0;
    padding:0;

    li
        margin: 0;
        padding: 0;
        width: 100%;
        border-top: 1px solid #fff;
        border-bottom: 1px solid #d6d6d6;
        text-decoration: none;
        list-style: none;
        font-size: 18px;
        text-align:left;
        width:100%;

        a
            background: #fff;
            color:#2c2c2c;
            text-decoration:none;
            margin: 0;
            padding: 15px 4%;
            display: block;
            overflow: hidden;
            font-size:14px;
